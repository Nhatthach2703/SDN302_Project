<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>PETSHOP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
    <style>
        .bottom-slide img { width: 100%; }
        .top-slide { width: 50%; height: 45%; background-color: white; position: absolute; top: 30%; left: 25%; border-radius: 2%; text-align: center; }
        .pet-cate, .accessori-cate { border-radius: 40px; }
        .card { border: 1px solid #ccc; border-radius: 10px; padding: 20px; margin-bottom: 20px; }
    </style>
</head>
<body>
  <%- include('../partials/header') %>

    <!-- Top Slide and Bottom Slide -->
    <div class="top-slide">
        <h4 style="color: #7b4a9e; margin-top: 80px">Say hello with PetShop</h4>
        <h4 style="text-align: justify; padding: 20px">
            Pet Shop is a pet store specializing in supplies for dogs and cats, offering items such as accessories, clothing, food, shampoo, cages, collars, leashes, and other pet products. It is a top destination providing professional pet services including spa baths, grooming, hair trimming, and pet boarding. With the best service quality, it is highly trusted and appreciated by customers.
        </h4>
    </div>
    <div class="bottom-slide">
        <img src="images/slider.png" alt="Slider" />
    </div>

    <!-- Categories Section -->
    <div class="container-fluid row mt-5 mb-5">
        <div class="col-md-5 row align-items-center pet-cate" style="margin: auto; background-color: #ffc12c">
            <div class="col-md-6">
                <img src="images/pet.png" alt="Pets" style="width: 75%" />
            </div>
            <div class="col-md-6">
                <h3 class="text-white text-center">Pets</h3>
                <div class="d-flex align-items-center justify-content-center">
                    <button class="btn btn-light" href="#">Shop Now</button>
                </div>
            </div>
        </div>
        <div class="col-md-5 row align-items-center accessori-cate" style="margin: auto; background-color: #fb416b">
            <div class="col-md-6">
                <h3 class="text-white text-center">Pet Accessories</h3>
                <div class="d-flex align-items-center justify-content-center">
                    <button class="btn btn-light" href="#">Shop Now</button>
                </div>
            </div>
            <div class="col-md-6">
                <img src="images/acces.png" alt="Pet Accessories" style="width: 70%" />
            </div>
        </div>
    </div>

    <!-- Dogs Section -->
    <div class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto" style="font-size: 32px; margin-left: 50px">Dogs</div>
                <div class="d-flex" style="margin-right: 20px; color: white">
                    <a href="#" style="color: black; text-decoration: underline">See More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <% dogs.forEach((product) => { %>
                <div class="col-md-3">
                    <div class="card">
                        <a class="col d-flex flex-column align-items-center justify-content-center" href="#" style="text-decoration: none">
                            <img src="<%= product.image || '#' %>" alt="<%= product.name %>" style="width: 300px" />
                            <p class="product-title text-center text-black"><%= product.name %></p>
                            <div class="btn active product-price text-white" style="background-color: #7b4a9e">
                                <span><%= product.price.toLocaleString() %> VND</span>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Cats Section -->
    <div class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto" style="font-size: 32px; margin-left: 50px">Cats</div>
                <div class="d-flex" style="margin-right: 20px; color: white">
                    <a href="#" style="color: black; text-decoration: underline">See More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <% cats.forEach((product) => { %>
                <div class="col-md-3">
                    <div class="card">
                        <a class="col d-flex flex-column align-items-center justify-content-center" href="#" style="text-decoration: none">
                            <img src="<%= product.image || '#' %>" alt="<%= product.name %>" style="width: 300px" />
                            <p class="product-title text-center text-black"><%= product.name %></p>
                            <div class="btn active product-price text-white" style="background-color: #7b4a9e">
                                <span><%= product.price.toLocaleString() %> VND</span>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Accessories Section -->
    <div class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="navbar-nav me-auto" style="font-size: 32px; margin-left: 50px">Pet Accessories</div>
                <div class="d-flex" style="margin-right: 20px; color: white">
                    <a href="#" style="color: black; text-decoration: underline">See More <i class="fas fa-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <% accessories.forEach((product) => { %>
                <div class="col-md-3">
                    <div class="card">
                        <a class="col d-flex flex-column align-items-center justify-content-center" href="#" style="text-decoration: none">
                            <img src="<%= product.image || '#' %>" alt="<%= product.name %>" style="width: 300px" />
                            <p class="product-title text-center text-black"><%= product.name %></p>
                            <div class="btn active product-price text-white" style="background-color: #7b4a9e">
                                <span><%= product.price.toLocaleString() %> VND</span>
                            </div>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <hr style="width: 92%; display: flex; margin-left: 4%" />
    <%- include('../partials/footer') %>
</body>
</html>