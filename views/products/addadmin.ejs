<%- include('../partials/headerAdmin') %>
<div class="container mt-5 mb-5">
    <h1 class="text-center mb-4">➕ Add Product</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/products/create/admin" method="POST" class="card p-4 shadow">
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name:</label>
                    <input type="text" id="name" name="name" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Category:</label>
                    <select id="category" name="category" class="form-select" required onchange="togglePetDetails()">
                        <option value="" disabled selected>Choose categories</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.name %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price:</label>
                    <input type="number" id="price" name="price" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="stock" class="form-label">Stock Quantity:</label>
                    <input type="number" id="stock" name="stock" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image (URL):</label>
                    <input type="text" id="image" name="image" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
                </div>

                <!-- Pet Details Section -->
                <div id="petDetailsSection" class="d-none">
                    <h5 class="mt-3">Pet Details</h5>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age (months):</label>
                        <input type="number" id="age" name="petDetails[age]" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="weight" class="form-label">Weight (kg):</label>
                        <input type="number" id="weight" name="petDetails[weight]" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="character" class="form-label">Character:</label>
                        <input type="text" id="character" name="petDetails[character]" class="form-control">
                    </div>
                </div>

                <div class="d-flex justify-content-around">
                    <button type="submit" class="btn btn-success">✅ Add Product</button>
                    <a href="/products/admin" class="btn btn-secondary">⬅ Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function togglePetDetails() {
        const category = document.getElementById("category").value.toLowerCase();
        const petDetailsSection = document.getElementById("petDetailsSection");
        if (category === "dog" || category === "cat") {
            petDetailsSection.classList.remove("d-none");
        } else {
            petDetailsSection.classList.add("d-none");
        }
    }
</script>
