<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Checkout</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Checkout</h2>

        <!-- Dữ liệu giỏ hàng được lưu trong div này -->
        <div id="cartData" 
            data-cart='<%= JSON.stringify(products) %>' 
            data-total="<%= products.reduce((sum, item) => sum + item.quantity * item.price, 0) %>">
        </div>

        <div class="card p-4">
            <h4>Order Summary</h4>
            <ul class="list-group mb-3">
                <% if (products.length > 0) { %>
                    <% products.forEach(item => { %>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <img src="<%= item.image || 'https://via.placeholder.com/50' %>" alt="Product Image" class="mr-2" width="50">
                                <b><%= item.name %></b> (x<%= item.quantity %>)
                            </div>
                            <span>$<%= (item.quantity * item.price).toFixed(2) %></span>
                        </li>
                    <% }) %>
                <% } else { %>
                    <p class="text-center">Your cart is empty.</p>
                <% } %>
            </ul>

            <h5>Total: $<span id="totalAmount"><%= products.reduce((sum, item) => sum + item.quantity * item.price, 0) %></span></h5>

            <form id="orderForm">
                <div class="mb-3">
                    <label for="paymentMethod" class="form-label">Payment Method:</label>
                    <select id="paymentMethod" class="form-select">
                        <option value="cash">Cash</option>
                        <option value="card">Card</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="shippingMethod" class="form-label">Shipping Method:</label>
                    <select id="shippingMethod" class="form-select">
                        <option value="standard">Standard</option>
                        <option value="express">Express</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="deliveryDate" class="form-label">Delivery Date:</label>
                    <input type="date" id="deliveryDate" class="form-control">
                </div>

                <button type="button" class="btn btn-primary" onclick="placeOrder()">Place Order</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function placeOrder() {
            const cartData = JSON.parse(document.getElementById("cartData").dataset.cart);
            const totalAmount = document.getElementById("cartData").dataset.total;
            
            const orderData = {
                user: "<%= user ? user._id : '' %>",
                items: cartData.map(item => ({
                    product: item._id,
                    quantity: item.quantity,
                    price: item.price
                })),
                total: totalAmount,
                paymentMethod: $("#paymentMethod").val(),
                shippingMethod: $("#shippingMethod").val(),
                deliveryDate: $("#deliveryDate").val()
            };

            $.ajax({
                url: "/orders/create",
                type: "POST",
                contentType: "application/json",
                data: JSON.stringify(orderData),
                success: function(response) {
                    alert("Order placed successfully!");
                    window.location.href = "/";
                },
                error: function(xhr) {
                    alert("Failed to place order: " + xhr.responseText);
                }
            });
        }
    </script>
</body>
</html>
