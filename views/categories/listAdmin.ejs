<%- include('../partials/header') %>
<div class="container mt-5 mb-5">
    <h2 class="mb-4">Category Manage</h2>
    <a href="/categories/create/admin" class="btn btn-primary mb-3">Add Category</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên danh mục</th>
                <th>Ngày tạo</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((category, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= category.name %></td>
                    <td><%= new Date(category.createdAt).toLocaleDateString() %></td>
                    <td>
                        <a href="/categories/edit/<%= category._id %>/admin" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/categories/<%= category._id %>/admin?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure that you want to delete this category?')">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../partials/footer') %>