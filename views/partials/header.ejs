<script>
    function searchProduct() {
        var keyword = document.getElementById("search").value.trim();
        var sanitizedKeyword = keyword.replace(/[^\w\s]/gi, '');
        if (sanitizedKeyword === '') {
            alert('Bạn chưa nhập từ khóa.');
        } else {
            var url = "/products/search?keyword=" + sanitizedKeyword;
            window.location.href = url;
        }
    }

    function handleSearch(event) {
        if (event.key === 'Enter') {
            searchProduct();
        }
    }

    let timeout = null;

    function handleInput() {
        clearTimeout(timeout);
        timeout = setTimeout(() => {
            var keyword = document.getElementById("search").value.trim();
            if (keyword.length >= 1) {
                var url = "/products/suggestion?keyword=" + keyword;
                var xhr = new XMLHttpRequest();
                xhr.open("GET", url, true);
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 4 && xhr.status === 200) {
                        var suggestions = JSON.parse(xhr.responseText);
                        displaySuggestions(suggestions);
                    }
                };
                xhr.send();
            }
            if (keyword === "") {
                document.getElementById("suggestionBoxForService").style.display = "none";
            }
        }, 500);
    }

    function displaySuggestions(suggestions) {
        var suggestionBox = document.getElementById("suggestionBoxForService");
        suggestionBox.innerHTML = "";
        suggestions.forEach(product => {
            var suggestion = document.createElement("button");
            suggestion.innerHTML = `${product.name} - ${product.type}`;
            suggestion.onclick = () => window.location.href = `/products/edit/${product._id}`;
            suggestionBox.appendChild(suggestion);
        });
        suggestionBox.style.display = suggestions.length > 0 ? "block" : "none";
    }
</script>